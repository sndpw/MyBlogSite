<%- include("partials/header"); -%>

<h1>Edit Post</h1>
<form action="/updatepost/<%= post._id %>" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="editTitle" value="<%= post.title %>" style="background-color:lightgray; border:0cap">
        <label>Post Description</label>
        <textarea class="form-control" name="editBody" style="background-color:lightgray; border:0cap" rows="5" cols="30"><%= post.content %></textarea>
        
        <!-- Input field for uploading a new image -->
        <label for="editImage">Upload New Image</label>
        <input type="file" id="editImage" name="editImage">
    </div>
    <button class="btn btn-primary" type="submit" name="button" style="background-color:gray; border:0cap; width:fit-content">Save Changes</button>
</form>
<br>
<form action="/deletepost/<%= post._id %>" method ="post" enctype="multipart/form-data">
    <button class = "btn btn-danger"type= "submit"name="delete" style="background-color:gray; border:0cap; width:fit-content">Delete Post</button>
</form>
<%- include("partials/footer"); -%>