<%- include("partials/header"); -%>
<div class="main-banner">
    <div class="row">
      <div class="col-lg-7">
        <div class="header-text">
          <h6>Welcome To Blogify</h6>
          <h4><em>Exlpore</em> All Posts</h4>
          <div class="main-button">
            <a href="/">Home</a>
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="most-popular">
        <div class="row">
          <div class="col-lg-12">
            <div class="row">
    <%  posts.forEach(function(post){ %>
        
            <div class="col-lg-4 col-sm-4">
        <div class="item">
         
         <img src="data:image/<%= post.img.contentType %>;base64,<%= post.img.data %>" alt="Post Image" >
         <h3><%=post.title%></h3>
         <p>
         <%=post.content.substring(0, 100) + " ..."%>
         
         </p>
         <div class="main-button">
            <a href="/posts/<%=post.title%>">Read More</a>
        </div>
     </div>
     </div>
         <% }) %>
            </div>
          </div>
          </div>
          </div>
          


<%- include("partials/footer"); -%>



